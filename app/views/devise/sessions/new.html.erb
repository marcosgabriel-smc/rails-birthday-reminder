<div class="container min-vh-100 d-flex flex-column align-items-center">
  <div class="mt-5 mb-0">
    <%= image_tag("logof_banner.png", class: "img-fluid") %>
  </div>
  <div class="card login my-3" style="width: 100%; max-width: 28rem;">
    <div class="card-body">
      <h5 class="card-title text-center">Bem-vindo ao seu novo bot preferido!</h5>
      <p class="card-text fst-italic">O Lembrete Amigo é um bot do Telegram que não te deixa esquecer o aniversário de nenhuma pessoa querida</p>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, "Log in", class: "button btn-one" %>
        </div>
      <% end %>
    </div>
    <div class="d-flex flex-column align-items-center justify-content-center mb-4">
      <h6 class="card-title">Primeiro acesso? Entre via Telegram!</h6>
      <script async
      src="https://telegram.org/js/telegram-widget.js?22"
      data-telegram-login="Birthday_Reminderr_Bot"
      data-size="large"
      data-auth-url="http://127.0.0.1:80/contacts/auth/telegram/callback"
      data-request-access="write"></script>
    </div>
    <div class="d-flex mb-3 justify-content-around">
      <div class="inside-link">
        <%= link_to "Esqueceu sua senha?", new_user_password_path, class: "text-center text-reset text-decoration-none" %>
      </div>
      |
      <div class="inside-link">
        <%= link_to "Reenviar confimação", new_confirmation_path(resource_name), class: "text-center text-reset text-decoration-none" %>
      </div>
    </div>
  </div>
  <div class="mb-0">
    <%= image_tag("starburstf_message.png", class: "img-fluid") %>
  </div>
</div>
