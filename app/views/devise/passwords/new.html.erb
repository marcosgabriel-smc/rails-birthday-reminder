<div class="container min-vh-100 p-5 d-flex flex-column align-items-center justify-content-center">
  <div class="main-page h-auto p-3 d-flex flex-column justify-content-between">
    <div>
      <h2 class="mb-2">Esqueceu sua senha?</h2>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Enviar email de recuperação", class: "mx-0 px-0" %>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-end">
      <%= link_to "Voltar", :back, class: "text-reset inside-link" %>
    </div>
  </div>
</div>
