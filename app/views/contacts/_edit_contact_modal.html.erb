<!-- Button trigger modal for edit -->
<a type="button" class="fa-regular fa-pen-to-square text-reset" data-bs-toggle="modal" data-bs-target="#editContactModal"></a>
<!-- Modal for edit -->
<div class="modal fade" id="editContactModal" tabindex="-1" aria-labelledby="editContactModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="editContactModalLabel">Editar aniversariante</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(contact, method: :patch) do |f| %>
          <div class="form-inputs">
            <%= f.input :name, input_html: { value: contact.name }, label: "Nome" %>
            <%= f.input :birthday, order: [:day, :month, :year], input_html: { value: contact.birthday }, label: "Data de AniversÃ¡rio" %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-contacts"><%= f.button :submit, 'Atualizar' %></button>
        </div>
      <% end %>
    </div>
  </div>
</div>
